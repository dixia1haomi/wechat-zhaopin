page {
  height: 100%;
  background-color: #fff;
}

.touxiang {
  position: relative;
  height: 160rpx;
  width: 160rpx;
  margin: 0 auto;
}

.touxiang-img {
  height: 160rpx;
  width: 160rpx;
  border-radius: 50%;
}

.zidingyi {
  height: 493rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.zidingyi-nan {
  color: #1296db;
  border: 2px solid white;
  border-radius: 50%;
  position: relative;
  top: -40rpx;
  left: 120rpx;
}

.zidingyi-nv {
  color: tomato;
  border-radius: 50%;
  border: 2px solid white;
  position: relative;
  top: -40rpx;
  left: 120rpx;
}

.login {
  height: 30px;
  width: 80px;
  line-height: 30px;
  margin: 10px auto 0 auto;
  border: 1px solid #f2f2f2;
}

.username {
  height: 32px;
  width: 80px;
  line-height: 30px;
  margin: 10px auto 0 auto;
}

.hover {
  background-color: #f2f2f2;
}

.user-ft {
  position: absolute;
  bottom: 15px;
  left: 25%;
  color: #ccc;
  font-size: 13px;
}

.user-ft::before {
  content: '—————';
  padding-right: 6px;
}

.user-ft::after {
  content: '—————';
  padding-left: 6px;
}
