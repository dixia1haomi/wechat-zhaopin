<view class='picker-view' style=''>
  <block wx:for="{{job_list_data}}" wx:key="">
    <navigator url='/pages/job/job?id={{item.id}}' open-type='navigate'>

      <view class='block'>
        <view class="pa-xia h2">{{item.job_name}}</view>

        <view class='pa-xia flex-ceshi'>
          <view class='col-tomato'>{{pay_level_data[item.pay_level]}}</view>
          <view class="h3">浏览:{{item.page_view}}</view>
          <view class="h3">{{item.update_time}}</view>
        </view>

        <view class='shenglve'>
          <block class='' wx:for="{{item.welfare}}" wx:for-item="aa" wx:key="">
            <text class='biaoqian'>{{aa}}</text>
          </block>
        </view>

        <view class='pa-shang border-xuxian-top'>
          <view class="fl-left h3">{{item.company_name}}</view>
          <view class="txt-right h3">
            <image src='/pages/img/address.png' class='icon-img' />{{work_place_data[item.work_area]}}</view>
        </view>

      </view>

    </navigator>
  </block>
</view>