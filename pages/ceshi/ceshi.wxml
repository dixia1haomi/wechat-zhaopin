<form bindsubmit='formValue'>

  <view class="">公司名称</view>
  <input name="company_name" placeholder='公司名称' value="{{company_name}}" bindinput='company_name'></input>

  <view class="">你的职位</view>
  <input name="you_job" placeholder='你的职位' value="{{you_job}}" bindinput='you_job'></input>

  <view class="section">
    <view class="section__title">入职时间</view>
    <picker name="start_date" mode="date" value="{{start_date}}" fields="month" start="2015-09-01" end="2017-09-01" bindchange="bindDateStart">
      <view class="picker">
        当前选择: {{start_date}}
      </view>
    </picker>
  </view>

  <view class="section">
    <view class="section__title">离职时间</view>
    <picker name="end_date" mode="date" value="{{end_date}}" fields="month" start="2015-09-01" end="2017-09-01" bindchange="bindDateEnd">
      <view class="picker">
        当前选择: {{end_date}}
      </view>
    </picker>
  </view>

  <view class="">工作内容</view>
  <textarea name="job_neirong" bindinput='job_neirong' value='{{job_neirong}}' placeholder='工作内容'></textarea>

  <button form-type='submit'>保存</button>

</form>