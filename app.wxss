  color: tomato;
}

/** border **/

.border-xuxian-top {
  border-top: 1px dashed #d9d9d9;
}

.border-xuxian-botton {
  border-bottom: 1px dashed #d9d9d9;
}

/*  标签  */

.biaoqian {
  border: 1px solid #84c1ff;
  border-radius: 2px;
  padding: 3px 5px 2px 5px;
  font-size: 12px;
  font-weight: 500;
  color: #84c1ff;
  margin: 8px 6px 0 0;
  background-color: #fff;
}

/* 块 */

.block {
  position: relative;
  margin-bottom: 1em;
  padding: 10px;
  background-color: #fff;
  line-height: 1.41176471;
   /* box-shadow: 0 0 5px 1px #888888;  */
}

/* 图标 */
.icon-img{
  height: 32rpx;
  width: 32rpx;
  margin-right: 20rpx;
}


